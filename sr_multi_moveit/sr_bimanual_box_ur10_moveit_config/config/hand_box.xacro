<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:arg name="prefix" default="rh_"/>

    <material name="light_grey_transparent">
      <color rgba="0.75 0.75 0.75 0.5" />
    </material>

    <xacro:macro name="hand_box" params="name width depth height prefix">
      <link name="${arg prefix}box_base_attach">
        <visual>
          <origin xyz="0.0 0.0 ${height / 2}" rpy="0.0 0.0 0.0" />
          <geometry name="${name}">
            <box size="${width} ${depth} ${height}"/>
          </geometry>
          <material name="light_grey_transparent"/>
        </visual>
        <collision>
          <origin xyz="0.0 0.0 ${height / 2}" rpy="0.0 0.0 0.0" />
          <geometry name="${name}">
            <box size="${width} ${depth} ${height}"/>
          </geometry>
        </collision>
      </link>
    </xacro:macro>

    <joint name="${arg prefix}hand_ee_fixed_joint" type="fixed">
      <parent link="${arg prefix}hand_base_attach" />
      <child link = "${arg prefix}hand_manipulator" />
      <origin xyz="0.0 0.0 0.10" rpy="0.0 0.0 0.0" />
    </joint>
    <link name="${arg prefix}hand_manipulator" />

</robot>
