<launch>
     <!-- Find launch file-->
     <arg name="scene" default="false"/>

<include file="$(find sr_robot_launch)/launch/sr_bimanual_ur10arms_hands.launch">
     <arg name="sim" value="true"/>
     <arg name="gui" value="true"/>
     <arg name="scene" value="$( arg scene)"/>
</include>

<!-- Test script -->
  <test test-name="test_bimanual_hand_and_arm" pkg="sr_robot_launch" type="test_bimanual_hand_and_arm.py" time-limit="300.0">
  <param name="/test_hand_and_arm_sim/scene" value="$(arg scene)"/>
  </test>
</launch>
