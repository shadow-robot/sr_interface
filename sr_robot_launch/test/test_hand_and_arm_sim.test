<launch>
    <!-- Find launch file-->
    <arg name="launch_file" default="sr_right_ur10arm_hand.launch"/>
    <!-- Set up the Scene -->
    <!-- <arg name="scene" default="false"/> -->
    <!-- Start at home -->
    <!-- <arg name="start_home" default="false"/> -->

    <!-- include the  launch file for hand --> 
<include file="$(find sr_robot_launch)/launch/$(arg launch_file)" >
    <arg name="sim" value="true"/>
    <arg name="gui" value="true"/>
    <!-- <arg name="scene" value="$( arg scene)"/> --> 
    <!-- <arg name="start_home" value="$( arg start_home)"/> -->
</include>

    <!-- Test script -->
  <test test-name="test_hand_and_arm_sim" pkg="sr_robot_launch" type="test_hand_and_arm_sim.py" time-limit="300.0">
    <param name="/test_sim/launch_file" value="$( arg launch_file)"/>
    <!-- <param name="/test_sim/scene" value="$( arg scene)"/> -->
    <!-- <param name="/test_sim/start_home" value="$( arg start_home)"/> -->
  </test>  
</launch>
