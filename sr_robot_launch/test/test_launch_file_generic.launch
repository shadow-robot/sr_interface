<launch>
     <!-- Launch with or without scene-->
     <arg name="scene" default="false"/>
     <param name="/test_sim/scene" value="$( arg scene)"/> 

     <!-- Choose hand type -->
     <arg name="hand_type" default="hand_e"/>
     <param name="/test_sim/hand_type" value="$( arg hand_type)"/>

     <!-- Set robot description -->
     <arg name="robot_description" value="$( find sr_multi_description)/urdf/$( arg robot_description)"/>
     
     <!-- Set robot config -->
     <arg name="robot_config_file" value="$( find sr_multi_moveit_config)/config/robot_configs/$( arg robot_config_file)"/>

     <arg name="robot_model" default="ur10"/>

    <!-- Set robot side -->
     <arg name="side" default="right"/>
     <param name="/test_sim/side" value="$( arg side)"/>

     <!-- Scene setup -->
     <arg name="initial_z" value="0.7521"/>
     <arg name="world" value="$(find sr_description_common)/worlds/demo_space_large_bimanual.world"/>
     <arg name="robot_model" value="$( arg robot_model)"/>

<include file="$(find sr_robot_launch)/launch/sr_ur_arm_hand.launch">
     <arg name="sim" value="true"/>
     <arg name="gui" value="true"/>
     <arg name="scene" value="$( arg scene)"/>
     <arg name="robot_description" value="$( arg robot_description)"/>
     <arg name="robot_config_file" value="$( arg robot_config_file)"/>
     <!-- <arg name="side" value="right"/> -->
     <arg name="hand_type" value="$( arg hand_type)"/>
     <arg name="side" value="$( arg side)"/>"
     <!-- <arg name="robot_model" value="ur10"/> -->
</include>
</launch>